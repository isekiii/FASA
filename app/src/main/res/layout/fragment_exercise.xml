<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Exercise.ExerciseFragment">


    <TextView
        android:id="@+id/testString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sample bla bla bla"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:viewBindingIgnore="true" />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/exercise_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/crunches"
        app:layout_constraintBottom_toTopOf="@+id/exercise_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137"
        tools:ignore="MissingConstraints"
        tools:viewBindingIgnore="true" />

    <TextView
        android:id="@+id/exercise_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  "
        android:textSize="220px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"
        tools:ignore="MissingConstraints"
        tools:viewBindingIgnore="true" />

    <Button
        android:id="@+id/exercise_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="Start exercise"
        android:textSize="80px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exercise_timer"
        tools:ignore="MissingConstraints"
        tools:viewBindingIgnore="true" />

    <TextView
        android:id="@+id/exercise_description"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_margin="20px"
        android:text="description-----"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_timer"
        app:layout_constraintVertical_bias="0.666"
        tools:viewBindingIgnore="true" />
</androidx.constraintlayout.widget.ConstraintLayout>