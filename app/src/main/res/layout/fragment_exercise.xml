<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Exercise.ExerciseFragment">

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toTopOf="@+id/exercise_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:viewBindingIgnore="true"
        />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/exercise_image"
        android:layout_width="228dp"
        android:layout_height="204dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/crunches"
        app:layout_constraintBottom_toTopOf="@+id/exercise_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:viewBindingIgnore="true" />

    <TextView
        android:id="@+id/exercise_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="  "
        android:textSize="220px"
        app:layout_constraintBottom_toTopOf="@+id/exercise_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercise_image"
        tools:ignore="MissingConstraints"
        tools:viewBindingIgnore="true" />

    <Button
        android:id="@+id/exercise_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="307dp"
        android:text="Start exercise"
        android:textSize="80px"
        app:layout_constraintBottom_toTopOf="@+id/exercise_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:viewBindingIgnore="true" />

    <TextView
        android:id="@+id/exercise_description"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginTop="343dp"
        android:text="description-----"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:viewBindingIgnore="true" />
</androidx.constraintlayout.widget.ConstraintLayout>